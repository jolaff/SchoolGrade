<div class=" shadow container p-4 mt-2" style="background-color: rgba(130,225,235,0.5);">
    <div class="row">
        <div class="col-2">
            <button type="button" class="btn btn-outline-dark" @onclick=@WeekDayBackward><span
                    class="oi oi-chevron-left"></span></button>
        </div>
        <div class="col-8">
            <h3 class="text-center text-uppercase">@weekDay</h3>
        </div>
        <div class="col-2">
            <button type="button" class="btn btn-outline-dark" @onclick=@WeekDayForward><span
                    class="oi oi-chevron-right"></span></button>
        </div>
    </div>
</div>

@code {
    private DateTime today = DateTime.Now;
    private string weekDay;
    int i = 0;

    protected override void OnInitialized()
    {
        weekDay = today.ToString("dddd");
    }

    private void WeekDayForward()
    {
        i++;
        var nextDay = today.AddDays(i);
        weekDay = nextDay.ToString("dddd");
    }

    private void WeekDayBackward()
    {
        i--;
        var nextDay = today.AddDays(i);
        weekDay = nextDay.ToString("dddd");
    }

}