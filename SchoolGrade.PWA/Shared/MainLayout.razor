@inherits LayoutComponentBase
@inject IStudentData studentData

<PageTitle>Grade Escolar</PageTitle>

<div class="main">
    <div class="row">
        <div class="col">
            <header>
                <Navbar Students=@students />
            </header>
        </div>
    </div>

    <div class="row">
        <div class="col">
            @Body
        </div>
    </div>

    <div class="row fixed-bottom">
        <div class="col">
            <footer>
                <p class="text-center">Todos os direitos reservados</p>
            </footer>
        </div>
    </div>
</div>

@code {
    private List<StudentModel> students = new();

    protected override void OnInitialized()
    {
        students = studentData.GetAllStudents();
    }
}