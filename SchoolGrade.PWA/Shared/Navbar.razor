<nav class="navbar sticky-top navbar-light" style="background-color: rgba(130,225,235,1);">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Aulas</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar">
            <span class="oi oi-person"></span>
        </button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Estudante</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    @foreach (StudentModel student in Students)
                    {
                        <li class="nav-item" data-bs-toggle="offcanvas">
                            <a class="nav-link" href="@student.DisplayName">@student.FirstName</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>

@code {
    [Parameter] public List<StudentModel> Students { get; set; }
}